<?xml version="1.0" encoding="utf-8"?>
<widget xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:vs="http://schemas.microsoft.com/appx/2014/htmlapps" id="com.hotelmee.tellmeapp" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" defaultlocale="zh-CN">
  <name>TellMeApp</name>
  <description>hotel packet</description>
  <author href="http://cordova.io" email="dev@cordova.apache.org">挑米科技</author>
  <content src="app.html" />
  <access origin="*" />
  <vs:features />
  <preference name="SplashScreen" value="screen" />
  <preference name="windows-target-version" value="8.1" />
  <!-- Support for Cordova 5.0.0 plugin system -->
  <plugin name="cordova-plugin-whitelist" version="1" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
    <allow-intent href="market:*" />
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
  </platform>
  <icon src="res/icons/icon-ihotel.png" />
  <platform name="android">
    <splash density="land-hdpi" src="res/screens/android/screen-hdpi-landscape.png" />
    <splash density="land-ldpi" src="res/screens/android/screen-ldpi-landscape.png" />
    <splash density="land-mdpi" src="res/screens/android/screen-mdpi-landscape.png" />
    <splash density="land-xhdpi" src="res/screens/android/tellme-screen-xhdpi-landscape.png" />
    <splash density="port-hdpi" src="res/screens/android/screen-hdpi-portrait.png" />
    <splash density="port-ldpi" src="res/screens/android/screen-ldpi-portrait.png" />
    <splash density="port-mdpi" src="res/screens/android/screen-mdpi-portrait.png" />
    <splash density="port-xhdpi" src="res/screens/android/tellme-screen-xhdpi-portrait.png" />
  </platform>
  <platform name="ios">
    <splash height="480" src="res/screens/ios/screen-iphone-portrait.png" width="320" />
    <splash height="960" src="res/screens/ios/tellme-screen-iphone-portrait-2x.png" width="640" />
    <splash height="1024" src="res/screens/ios/screen-ipad-portrait.png" width="768" />
    <splash height="2048" src="res/screens/ios/tellme-screen-ipad-portrait-2x.png" width="1536" />
    <splash height="768" src="res/screens/ios/screen-ipad-landscape.png" width="1024" />
    <splash height="1536" src="res/screens/ios/tellme-screen-ipad-landscape-2x.png" width="2048" />
    <splash height="1136" src="res/screens/ios/tellme-screen-iphone-568h-2x.png" width="640" />
    <splash height="1334" src="res/screens/ios/tellme-screen-iphone-portrait-667h.png" width="750" />
    <splash height="2208" src="res/screens/ios/tellme-screen-iphone-portrait-736h.png" width="1242" />
    <splash height="1242" src="res/screens/ios/tellme-screen-iphone-landscape-736h.png" width="2208" />
  </platform>
  <platform name="windows">
    <splash height="300" src="res/screens/windows/tellme-SplashScreen.scale-100.png" width="620" />
    <splash height="1920" src="res/screens/windows/tellme-SplashScreen.scale-240.png" width="1152" />
    <splash height="1920" src="res/screens/windows/tellme-SplashScreenPhone.scale-240.png" width="1152" />
  </platform>
  <platform name="wp8">
    <splash height="800" src="res/screens/wp8/tellme-SplashScreenImage.jpg" width="480" />
  </platform>
  <vs:plugin name="cordova-plugin-whitelist" version="1.2.1" />
  <vs:plugin name="cordova-plugin-splashscreen" version="3.2.0" />
  <vs:plugin name="cordova-plugin-crosswalk-webview" version="1.5.0" />
  <vs:plugin name="cordova-plugin-camera" version="2.1.0" />
  <vs:plugin name="cordova-plugin-file" version="4.1.1" />
  <vs:plugin name="cordova-plugin-file-transfer" version="1.5.0" />
</widget>